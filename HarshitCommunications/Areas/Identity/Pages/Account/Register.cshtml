@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<!----------------------- Main Container -------------------------->

<div class="container d-flex justify-content-center align-items-center min-vh-100">

    <!----------------------- Login Container -------------------------->

    <div class="row border rounded-5 p-3 bg-white shadow box-area">

        <!--------------------------- Left Box ----------------------------->

        <div class="col-md-6 rounded-4 d-flex justify-content-center align-items-center flex-column left-box" style="background: #103cbe;">
            <div class="featured-image mb-3">
                <img src="~/Images/Static_Images/login-img.jpg" class="img-fluid" style="width: 250px;">
            </div>
            <p class="text-white fs-2" style="font-family: 'Courier New', Courier, monospace; font-weight: 600;">Be Verified</p>
        </div>

        <!-------------------- ------ Right Box ---------------------------->

        <div class="col-md-6 right-box">
            <div class="row align-items-center">
                <div class="header-text mb-4">
                    <h2>Hello</h2>
                    <p>Register Yourself!</p>
                </div>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="input-group mb-3">
                        <input asp-for="Input.Name" class="form-control form-control-lg bg-light fs-6" autocomplete="username" aria-required="true" placeholder="FullName" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Input.Email" class="form-control form-control-lg bg-light fs-6" autocomplete="username" aria-required="true" placeholder="Email Address" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-4">
                        <input asp-for="Input.PhoneNumber" class="form-control form-control-lg bg-light fs-6" placeholder="Phone Number" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Input.Password" class="form-control form-control-lg bg-light fs-6" autocomplete="new-password" aria-required="true" placeholder="Password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-4">
                        <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg bg-light fs-6" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-4">
                        <input asp-for="Input.Address" class="form-control form-control-lg bg-light fs-6" placeholder="Address" />
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-4">
                        <input asp-for="Input.City" class="form-control form-control-lg bg-light fs-6" placeholder="City" />
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-4">
                        <input asp-for="Input.State" class="form-control form-control-lg bg-light fs-6" placeholder="State" />
                        <span asp-validation-for="Input.State" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-4">
                        <input asp-for="Input.Pincode" class="form-control form-control-lg bg-light fs-6" placeholder="Pincode" />
                        <span asp-validation-for="Input.Pincode" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-4">
                        <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-control form-control-lg bg-light fs-6" aria-required="true">
                            <option disabled selected>--Select Role--</option>
                        </select>
                    </div>
                    <div class="input-group mb-3">
                        <button id="registerSubmit" type="submit" class="btn btn-lg btn-primary w-100 fs-6">Register</button>
                    </div>
@*                     <div class="input-group mb-3">
                        <button class="btn btn-lg btn-light w-100 fs-6"><img src="images/google.png" style="width:20px" class="me-2"><small>Sign In with Google</small></button>
                    </div> *@
                    <div class="row">
                        <small><a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-lg btn-outline-warning w-100 fs-6">Already Logged in ?</a></small>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



