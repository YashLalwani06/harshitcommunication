@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<div id="register-section" class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-light text-center py-3">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <h4 class="text-center text-info">Associate your @Model.ProviderDisplayName account.</h4>
            <hr />

            <p class="text-center">
                You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
                Please enter your details below and click **Register** to finish logging in.
            </p>

            <div class="row justify-content-center">
                <div class="col-md-12">
                    <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.Email" class="fw-bold"></label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="Enter your email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.Name" class="fw-bold"></label>
                            <input asp-for="Input.Name" class="form-control" placeholder="Enter your name" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.PhoneNumber" class="fw-bold"></label>
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.Address" class="fw-bold"></label>
                            <input asp-for="Input.Address" class="form-control" placeholder="Enter your address" />
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.City" class="fw-bold"></label>
                            <input asp-for="Input.City" class="form-control" placeholder="Enter your city" />
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.State" class="fw-bold"></label>
                            <input asp-for="Input.State" class="form-control" placeholder="Enter your state" />
                            <span asp-validation-for="Input.State" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.Pincode" class="fw-bold"></label>
                            <input asp-for="Input.Pincode" class="form-control" placeholder="Enter your pincode" />
                            <span asp-validation-for="Input.Pincode" class="text-danger"></span>
                        </div>

                        <button type="submit" class="w-100 btn btn-lg btn-success">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
