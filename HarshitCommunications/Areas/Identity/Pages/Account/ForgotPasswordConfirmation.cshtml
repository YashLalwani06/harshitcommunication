@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<div id="forgot-password-confirmation" class="container d-flex flex-column align-items-center py-5">
    <div class="card p-5 shadow-lg text-center">
        <h1 class="text-dark fw-bold">@ViewData["Title"]</h1>
        <p class="text-muted mt-3">We’ve sent you an email with instructions to reset your password.</p>
        <p class="mt-3">Return to <a asp-page="./Login" class="text-primary fw-bold">Login</a> page.</p>
    </div>
</div>