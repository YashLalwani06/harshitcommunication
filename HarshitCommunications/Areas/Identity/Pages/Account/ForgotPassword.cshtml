@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div id="forgot-password-container" class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card p-5 shadow-lg">
                <h1 class="text-dark text-center">@ViewData["Title"]</h1>
                <h2 class="text-muted text-center">Enter your email to reset your password</h2>
                <hr />
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger text-center" role="alert"></div>
                    <div class="form-floating mb-4">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg w-100">Reset Password</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
