@model Category

<div class="container">
    <div class="card shadow border-0 my-4">
        <div class="card-header bg-primary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Add a Category</h2>
                </div>
            </div>
        </div>

        <div class="card-body p-4">
            <form method="post">
                <div class="row">
                    <div class="col-12">
                        <div class="border p-3">
                            <div class="mb-3">
                                <label asp-for="Name">Category Name</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="DisplayOrder">Display Order</label>
                                <input asp-for="DisplayOrder" class="form-control" />
                                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-6 col-md-3">
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                </div>
                                <div class="col-6 col-md-3">
                                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-dark form-control">
                                        Back to List
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}