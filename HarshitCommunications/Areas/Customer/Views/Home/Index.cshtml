@model Product

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">

    <div id="heroCarousel" class="carousel slide pb-5" data-bs-ride="carousel">
        <div class="carousel-inner">
            <!-- Slide 1 -->
            <div class="carousel-item active hero-slide" data-bs-interval="3000">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <img src="~/Images/Static_Images/slide1.png" class="img-fluid w-100" alt="Slide 1 Image">
                    </div>
                    <div class="col-md-6">
                        <div class="carousel-caption text-start">
                            <h1 class="display-4 fw-bold">Discover the Latest Accessories</h1>
                            <p class="lead">Upgrade your devices with premium-quality accessories.</p>
                            <div>
                                <a class="btn btn-outline-primary btn-lg me-2" asp-area="Customer" asp-controller="Home" asp-action="AllProducts">Explore Products</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Slide 2 -->
            <div class="carousel-item hero-slide" data-bs-interval="3000">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <img src="~/Images/Static_Images/slide2.jpg" class="img-fluid w-100" alt="Slide 2 Image">
                    </div>
                    <div class="col-md-6">
                        <div class="carousel-caption text-start">
                            <h1 class="display-4 fw-bold">Stylish Headphones</h1>
                            <p class="lead">Find everything you need to protect and enhance your Headphones.</p>
                            <div>
                                <a class="btn btn-outline-primary btn-lg me-2" asp-area="Customer" asp-controller="Home" asp-action="AllProducts">View Collection</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Slide 3 -->
            <div class="carousel-item hero-slide" data-bs-interval="3000">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <img src="~/Images/Static_Images/slide3.png" class="img-fluid w-100" alt="Slide 3 Image">
                    </div>
                    <div class="col-md-6">
                        <div class="carousel-caption text-start">
                            <h1 class="display-4 fw-bold">Premium Mobile Accessories</h1>
                            <p class="lead">Affordable & durable accessories for your smartphone.</p>
                            <div>
                                <a class="btn btn-outline-primary btn-lg me-2" asp-area="Customer" asp-controller="Home" asp-action="AllProducts">Start Shopping</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Thumbnail Previews Below Carousel -->
        <div class="container mt-3">
            <div class="row justify-content-center">
                <div class="col-auto">
                    <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active">
                        <img src="~/Images/Static_Images/slide1.png" class="carousel-thumbnail">
                    </button>
                </div>
                <div class="col-auto">
                    <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1">
                        <img src="~/Images/Static_Images/slide2.jpg" class="carousel-thumbnail">
                    </button>
                </div>
                <div class="col-auto">
                    <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2">
                        <img src="~/Images/Static_Images/slide3.png" class="carousel-thumbnail">
                    </button>
                </div>
            </div>
        </div>
    </div>



    <div class="container mb-5 py-5">
        <h2 class="text-center fw-bold mb-4">
            Featured <span class="text-primary">Products</span>
        </h2>
        <div class="row row-cols-1 row-cols-md-4 g-4">
            <!-- Product 1 -->
            <div class="col">
                <div class="card text-center p-3 shadow-sm product-card">
                    <img src="~/Images/Static_Images/hp1.jpg" class="card-img-top" alt="Coolpods 42">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Coolpods 42</h5>
                        <p class="card-text text-muted">₹1000.00</p>
                        <button class="btn btn-primary form-control w-75"><i class="bi bi-cart"></i> Add to Cart</button>
                    </div>
                </div>
            </div>

            <!-- Product 2 -->
            <div class="col">
                <div class="card text-center p-3 shadow-sm product-card">
                    <img src="~/Images/Static_Images/hp2.jpg" class="card-img-top" alt="Powerbox 1 Pro">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Powerbox 1 Pro</h5>
                        <p class="card-text text-muted">₹1000.00</p>
                        <button class="btn btn-primary form-control w-75"><i class="bi bi-cart"></i> Add to Cart</button>
                    </div>
                </div>
            </div>

            <!-- Product 3 -->
            <div class="col">
                <div class="card text-center p-3 shadow-sm product-card">
                    <img src="~/Images/Static_Images/hp3.jpg" class="card-img-top" alt="Rover 9">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Rover 9</h5>
                        <p class="card-text text-muted">₹1000.00</p>
                        <button class="btn btn-primary form-control w-75"><i class="bi bi-cart"></i> Add to Cart</button>
                    </div>
                </div>
            </div>

            <!-- Product 4 -->
            <div class="col">
                <div class="card text-center p-3 shadow-sm product-card">
                    <img src="~/Images/Static_Images/hp4.jpg" class="card-img-top" alt="Chamber 26">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Chamber 26c</h5>
                        <p class="card-text text-muted">₹1000.00</p>
                        <button class="btn btn-primary form-control w-75"><i class="bi bi-cart"></i> Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="bg-image-container py-5">
    </div>


    <div class="container my-5 py-5">
        <h2 class="text-center fw-bold mb-4">Shop by <span class="text-primary">Category</span></h2>
        <div class="row g-4">
            <!-- Card 1 -->
            <div class="col-md-4 col-sm-6">
                <div class="card text-center p-3 shadow-sm category-card" style="background-color: #FFFCF7;">
                    <img src="~/Images/Static_Images/card1.png" alt="Earbuds" class="img-fluid mx-auto" style="max-height: 150px;">
                    <h5 class="mt-3 fw-bold">Earbuds</h5>
                </div>
            </div>

            <!-- Card 2 -->
            <div class="col-md-4 col-sm-6">
                <div class="card text-center p-3 shadow-sm category-card" style="background-color: #d1ecf1;">
                    <img src="~/Images/Static_Images/card2.png" alt="Headphones" class="img-fluid mx-auto" style="max-height: 150px;">
                    <h5 class="mt-3 fw-bold">Headphones</h5>
                </div>
            </div>

            <!-- Card 3 -->
            <div class="col-md-4 col-sm-6">
                <div class="card text-center p-3 shadow-sm category-card" style="background-color: #d4edda;">
                    <img src="~/Images/Static_Images/card3.png" alt="Smart Watch" class="img-fluid mx-auto" style="max-height: 150px;">
                    <h5 class="mt-3 fw-bold">Smart Watch</h5>
                </div>
            </div>

            <!-- Card 4 -->
            <div class="col-md-4 col-sm-6">
                <div class="card text-center p-3 shadow-sm category-card" style="background-color: #FEF8DD;">
                    <img src="~/Images/Static_Images/card4.png" alt="Speakers" class="img-fluid mx-auto" style="max-height: 150px;">
                    <h5 class="mt-3 fw-bold">Speakers</h5>
                </div>
            </div>

            <!-- Card 5 -->
            <div class="col-md-4 col-sm-6">
                <div class="card text-center p-3 shadow-sm category-card" style="background-color: #F6D5FF;">
                    <img src="~/Images/Static_Images/card5.png" alt="Power Bank" class="img-fluid mx-auto" style="max-height: 150px;">
                    <h5 class="mt-3 fw-bold">Power Bank</h5>
                </div>
            </div>

            <!-- Card 6 -->
            <div class="col-md-4 col-sm-6">
                <div class="card text-center p-3 shadow-sm category-card" style="background-color: #f5c6cb;">
                    <img src="~/Images/Static_Images/card6.png" alt="Charger" class="img-fluid mx-auto" style="max-height: 150px;">
                    <h5 class="mt-3 fw-bold">Charger</h5>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        var carousel = document.getElementById('heroCarousel');

        // Resume auto-play when hovering
        carousel.addEventListener('mouseenter', function () {
            var carouselInstance = bootstrap.Carousel.getInstance(carousel);
            carouselInstance.cycle();
        });

        // Ensure auto-play continues after interacting
        carousel.addEventListener('mouseleave', function () {
            var carouselInstance = bootstrap.Carousel.getInstance(carousel);
            carouselInstance.cycle();
        });
    </script>
}