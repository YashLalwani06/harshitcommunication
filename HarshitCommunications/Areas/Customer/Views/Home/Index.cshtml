@model Product

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">

    <div id="heroCarousel" class="carousel slide carousel-fade mt-5 " data-bs-ride="carousel">
        <div class="carousel-inner">
            <!-- Slide 1 -->
            <div class="carousel-item active hero-slide" data-bs-interval="3000">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <img src="~/Images/Static_Images/slide1.png" class="img-fluid w-100" alt="Slide 1 Image">
                    </div>
                    <div class="col-md-6">
                        <div class="carousel-caption text-start">
                            <h1 class="display-4 fw-bold">Discover the Latest Accessories</h1>
                            <p class="lead">Upgrade your devices with premium-quality accessories.</p>
                            <div>
                                <a class="btn btn-outline-primary btn-lg me-2" asp-area="Customer" asp-controller="Home" asp-action="AllProducts">Explore Products</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Slide 2 -->
            <div class="carousel-item hero-slide" data-bs-interval="3000">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <img src="~/Images/Static_Images/slide2.jpg" class="img-fluid w-100" alt="Slide 2 Image">
                    </div>
                    <div class="col-md-6">
                        <div class="carousel-caption text-start">
                            <h1 class="display-4 fw-bold">Stylish Headphones</h1>
                            <p class="lead">Find everything you need to protect and enhance<br /> your Headphones.</p>
                            <div>
                                <a class="btn btn-outline-primary btn-lg me-2" asp-area="Customer" asp-controller="Home" asp-action="AllProducts">View Collection</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Slide 3 -->
            <div class="carousel-item hero-slide" data-bs-interval="3000">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <img src="~/Images/Static_Images/slide3.png" class="img-fluid w-100" alt="Slide 3 Image">
                    </div>
                    <div class="col-md-6">
                        <div class="carousel-caption text-start">
                            <h1 class="display-4 fw-bold">Premium Mobile Accessories</h1>
                            <p class="lead">Affordable & durable accessories for your smartphone.</p>
                            <div>
                                <a class="btn btn-outline-primary btn-lg me-2" asp-area="Customer" asp-controller="Home" asp-action="AllProducts">Start Shopping</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
