            <div class="col-md-4 col-sm-6">
                <div class="card text-center p-3 shadow-sm category-card" style="background-color: #F6D5FF;">
                    <img src="~/Images/Static_Images/card5.png" alt="Power Bank" class="img-fluid mx-auto" style="max-height: 150px;">
                    <h5 class="mt-3 fw-bold">Power Bank</h5>
                </div>
            </div>

            <!-- Card 6 -->
            <div class="col-md-4 col-sm-6">
                <div class="card text-center p-3 shadow-sm category-card" style="background-color: #f5c6cb;">
                    <img src="~/Images/Static_Images/card6.png" alt="Charger" class="img-fluid mx-auto" style="max-height: 150px;">
                    <h5 class="mt-3 fw-bold">Charger</h5>
                </div>
            </div>
        </div>
    </div>
